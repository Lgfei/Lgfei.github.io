<?xml version="1.0" encoding="GBK"?> 
<validators>  
    <!-- 添加对用户名的校验 -->  
    <field name="userInfoVO.userAccount">  
        <field-validator type="requiredstring">  
            <param name="trim">true</param>  
            <message>帐号不能为空</message>  
        </field-validator> 
    </field>  
      
    <!-- 添加对密码的校验 -->  
    <field name="userInfoVO.password">  
        <field-validator type="requiredstring">  
            <param name="trim">true</param>  
            <message>密码不能为空</message>  
        </field-validator> 
    </field>  
</validators> 